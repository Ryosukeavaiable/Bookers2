<h1>User info</h1>
<%= form_with model: @user do |f| %>
<p>Name</p>
<%= f.text_field :name %>
<p>image</p>
<%= f.file_field :profile_image, accept: "image/*" %>
<p>introduction</p>
<%= f.text_area :introduction %><br>
<%= f.submit "Update User" %>
<% end %>