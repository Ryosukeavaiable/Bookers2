<p id="notice"></p>
<div class="container px-5 px-sm-o">
  <div class="row">
    <div class="col-md-3">
<h1>User info</h1>
<%= image_tag @user.get_profile_image(100, 100) %>
<table class="table">
  <tr>
    <th>name</th>
    <th><%= @user.name %></th>
  </tr>
  <tr>
    <th>introduction</th>
    <th><%= @user.introduction %></th>
  </tr>
</table>

<div class="row">
<%= link_to edit_user_path(@user), class: "btn btn-outline-secondary btn-block" do %>
<i class="fa-solid fa-user-gear"></i>
<% end %>
</div>


<h2 class="mt-3">New book</h2>
<%= form_with model: @book_new do |f| %>
<p>Title</p>
<%= f.text_field :title %>
<p>Opinion</p>
<%= f.text_area :body %><br>
<%= f.submit "Create Book", class: "btn btn-success" %>
<% end %>
</div>


<div class="col-md-8 offset-md-1">
<h2>Users</h2>
<table class="table">
    <tr>
      <th>image</th>
      <th>name</th>
      <th colspan="3"></th>
    </tr>
  <% @users.each do |user| %>
    <tr>
      <td><%= image_tag user.get_profile_image(100, 100) %></td>
      <td><%= user.name %></td>
      <td><%= link_to "Show", user_path(user.id) %></td>
    </tr>
  <% end %>
</table>
</div>
</div>
</div>