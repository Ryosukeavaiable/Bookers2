<% if @book.errors.any? %>
<%= @book.errors.count %> errors prohibited this book from being saved:
<ul>
  <% @book.errors.full_messages.each do |message| %>
   <li><%= message %></li>
  <% end %>
</ul>

<% end %>
<p id="notice"></p>
<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-sm-o mx-auto">
<h1>Editing Book</h1>
<%= form_with model: @book do |f| %>
<p>Title</p>
<%= f.text_field :title %>
<p>Opinion</p>
<%= f.text_area :body %><br>
<%= f.submit "Update Book", class: "btn btn-success" %>
<% end %>
<%= link_to "Show", book_path(@book.id) %>
<%= "|" %>
<%= link_to "Back", books_path %>
</div>
</div>
</div>