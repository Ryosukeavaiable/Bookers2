
<% if @book_new.errors.any? %>
<%= @book_new.errors.count %> errors prohibited this book from being saved:
<ul>
  <% @book_new.errors.full_messages.each do |message| %>
   <li><%= message %></li>
  <% end %>
</ul>
<% end %>

<h1>User info</h1>
<%= image_tag @user.get_profile_image(100, 100) %>
<table>
  <tr>
    <th>name</th>
    <th><%= @user.name %></th>
  </tr>
  <tr>
    <th>introduction</th>
    <th><%= @user.introduction %></th>
  </tr>
</table>



<h1>New Book</h1>
<%= form_with model: @book_new do |f| %>
<h4>Title</h4>
<%= f.text_field :title %>
<h4>Opinion</h4>
<%= f.text_area :body %><br>
<%= f.submit "CreateBook" %>
<% end %>

<h1>Books</h1>
<table>
    <tr>
      <th></th>
      <th>Title</th>
      <th>Opinion</th>
    </tr>
  <% @books.each do |book| %>
    <tr>
      <td><%= image_tag book.user.get_profile_image(100, 100) %></td>
      <td><%= link_to book.title, book_path(book.id) %></td>
      <td><%= book.body %></td>
    </tr>
  <% end %>
</table>
